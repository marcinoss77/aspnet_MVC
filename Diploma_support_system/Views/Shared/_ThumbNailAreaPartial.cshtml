@model IEnumerable<Student>

@if (Model.Count() > 0)
{
    <div class="col-12 post @Model.FirstOrDefault().Promoter.Name.Replace(" ",string.Empty) menu-restaurant">
        <div class="row">
            <h3 class="text-success"> @Model.FirstOrDefault().Promoter.Name @Model.FirstOrDefault().Promoter.Surname </h3>
        </div>
        @foreach (var item in Model)
        {
            <div class="border border-info rounded col-12" style="margin-bottom: 20px; margin-top: 20px; padding: 30px">
                <div class="row">
                    <div class="col-md-3 col-sm-12">
                        <img src="images/default_user.png" width="99%" style="border-radius: 5px; border: 1px solid #bbb9b9" />
                    </div>
                    <div class="col-md-9 col-sm-12">
                        <div class="row pr-3">
                            <div class="col-8">
                                <label class="text-primary" style="font-size: 21px;color:maroon">@item.Name</label>
                            </div>
                            <div class="col-4 text-right" style="color: maroon">
                                <h4> Group : @item.Group.GroupNumber</h4>
                            </div>
                        </div>
                        <div class="row col-12 text-justify text-wrap text-break d-none d-md-block">
                            <p>@Html.Raw(item.Description)</p>
                        </div>
                        <div class="col-md-3 col-sm-12 offset-md-9 text-right ">
                            <a asp-action="Details" class="btn btn-success form-control float-right" asp-route-id="@item.Id">Details</a>
                        </div>
                    </div>
                </div>
                
            </div>
        }
        <div class="p-4"></div>
    </div>
}