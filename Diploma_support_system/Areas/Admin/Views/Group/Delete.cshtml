@model Diploma_support_system.Models.Group
@using Diploma_support_system.Extensions;
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2 class="text-info"> Delete Group</h2>
<br />
<div class="border backgroundWhiteBorder row">
    <div class="col-8 border-right">
        <form method="post" asp-action="Delete">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="GroupNumber" class="col-form-label"></label>
                </div>
                <div class="col-5">
                    <input asp-for="GroupNumber" disabled="" class="form-control" />
                </div>
                <span asp-validation-for="GroupNumber" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-5 offset-3">
                    <partial name="_DeleteAndBackToListButton" model="Model.Id" />
                </div>
            </div>
        </form>
    </div>
</div>