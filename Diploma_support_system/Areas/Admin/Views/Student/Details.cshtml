@model Diploma_support_system.Models.ViewModels.StudentDiplomaViewModel
@using Diploma_support_system.Extensions

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2 class="text-info">Details of Diploma</h2>
<br />

<form method="post" enctype="multipart/form-data" asp-action="Details">
    <div class="border backgroundWhiteBorder">
        <input type="hidden" asp-for="Student.Id" />

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Student.Name" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Student.Name" disabled class="form-control" />
            </div>
            <span asp-validation-for="Student.Name" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Student.Surname" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Student.Surname" disabled class="form-control" />
            </div>
            <span asp-validation-for="Student.Surname" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Student.DiplomaName" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Student.DiplomaName" disabled class="form-control" />
            </div>
            <span asp-validation-for="Student.DiplomaName" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Student.Description" class="col-form-label"></label>
            </div>
            <div class="col-5" >
                @Html.TextAreaFor(m => m.Student.Description, new {@disabled = "true"})
            </div>
            <span asp-validation-for="Student.Description" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Student.Diploma" id="ddlDiploma" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input type="file" name="files" disabled multiple class="form-control" />
            </div>
            <td>
                <a asp-action="DownloadFile" asp-route-filePath="@Model.Student.Diploma" asp-route-name="@Model.Student.Name" asp-route-surname="@Model.Student.Surname">Download @Model.Student.Diploma</a>
            </td>

        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Student.PromoterId" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <select asp-for="@Model.Student.PromoterId"  disabled id="PromoterId" asp-items="Model.Promoter.ToSelecListItem(Model.Student.GroupId)" class="form-control"></select>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Student.GroupId" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <select asp-for="@Model.Student.GroupId" id="GroupId" disabled name="GroupId" asp-items="@(new SelectList(string.Empty, "id", "Name"))" class="form-control"></select>
            </div>
        </div>

        <div class="col-8">
            <div class="col-8 offset-4">
                <partial name="_DetailsAndBackToListButton" model="Model.Student.Id" />
            </div>
        </div>
    </div>
</form>
@section Scripts{
    <script>
        tinymce.init({
            selector: 'textarea',
            plugins: "lists",
            menubar: 'file edit format'
        });
    </script>
    <script type="text/javascript">
        $(document).ready(function() {
            getGroup();
            $('#PromoterId').change(function() {
                getGroup();
            });
        });

        function getGroup() {
            var url = '@Url.Content("~/")' + "Admin/Group/GetGroup";
            var ddlsource = '#PromoterId';
            $.getJSON(url, { id: $(ddlsource).val() }, function(data) {
                var items = '';
                $('#GroupId').empty();
                $.each(data,
                    function(i, group) {
                        items += "<option value='" + group.value + "'>" + group.text + "</option>";
                    });
                $('#GroupId').html(items);

            })
        }
    </script>
    <script>
        $(document).ready(function() {
            $('#ddlDiploma').on("change",
                function() {
                    var fileName = $(this).val().split("\\").pop();
                    $(this).next('#ddlDiploma').html(fileName);
                });
        });
    </script>
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}